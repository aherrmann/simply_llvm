-- Initial simply-llvm.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                simply-llvm
version:             0.2.0.0
synopsis:            Compile simply typed lambda calculuse using LLVM
description:         A demo of llvm-hs
homepage:            https://github.com/aherrmann/simply_llvm
license:             OtherLicense
license-file:        UNLICENSE
author:              Andreas Herrmann
maintainer:          andreash87@gmx.ch
-- copyright:
category:            Development
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10
source-repository head
  type:              git
  location:          file:///.

library
  exposed-modules:     Simply
                     , Simply.Examples
                     , Simply.Surface.AST
                     , Simply.Surface.TypeCheck
                     , Simply.Intermediate.AST
                     , Simply.Intermediate.FromSurface
                     , Simply.LLVM.FromIntermediate
                     , Simply.LLVM.Codegen
                     , Simply.LLVM.JIT
                     , Simply.Orphans
  -- other-modules:
  ghc-options:         -Wall
  default-extensions:  NoImplicitPrelude
                       OverloadedStrings
                       LambdaCase
                       GeneralizedNewtypeDeriving
  other-extensions:    DeriveGeneric
                     , FlexibleContexts
                     , MultiParamTypeClasses
                     , RecordWildCards
  build-depends:       base >=4.8 && <4.10
                     , bytestring >=0.10 && <0.11
                     , containers >=0.5.6 && <0.5.8
                     , dlist >=0.8.0 && <0.8.1
                     , GenericPretty >=1.2.1 && <1.2.2
                     , libffi >= 0.1 && < 0.2
                     , llvm-hs == 4.1.*
                     , llvm-hs-pure == 4.1.*
                     , llvm-hs-pretty == 0.1.*
                     , managed >=1.0 && <1.1
                     , mtl >=2.2.1 && <2.2.2
                     , pretty >= 1.1.2 && <1.1.4
                     , process >=1.4 && <1.5
                     , protolude >=0.1.7 && <0.1.11
                     , text >=1.2.2 && <1.3
                     , transformers >=0.4.2 && <0.6
  hs-source-dirs:      src
  default-language:    Haskell2010

Test-Suite test-simply
  type:                exitcode-stdio-1.0
  main-is:             Test.hs
  ghc-options:         -Wall -threaded -O2
  default-extensions:  NoImplicitPrelude
                       OverloadedStrings
                       LambdaCase
                       GeneralizedNewtypeDeriving
  other-extensions:    TemplateHaskell
                     , TupleSections
  build-depends:       base >=4.8 && <4.10
                     , containers >=0.5.6 && <0.5.8
                     , hedgehog >=0.3 && <0.4
                     , hspec >=2.4 && <2.5
                     , hspec-core >=2.4 && <2.5
                     , protolude >=0.1.7 && <0.1.11
                     , QuickCheck >=2.9 && <2.10
                     , text >=1.2.2 && <1.3
                     , simply-llvm
  hs-source-dirs:      test
  default-language:    Haskell2010
